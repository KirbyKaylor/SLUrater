<% include chunks/head %>
<div class="page">
    <p>Dining Page which will have comments and ratings from users.</p>
    
    <li><a id="dining" href="/rate/1<%=diningPage._id%>">Like</a></li>
    <li><a id="dining" href="/rate/2<%=diningPage._id%>">Dislike</a></li>
    
    Like Ratings: <%=ratings.like%>
    Dislike Ratings: <%=ratings.dislike%>
    
    <table>
        <tr>
            <th>Comment</th>
        </tr>
        <% comments.forEach(function(comment) { %>
        <tr>
            <td><%= comment.text %></td>
        </tr>
        <tr>
            <td>-------------------</td>
        </tr>
        <% }); %>
        
    </table
    
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Page ID</th>
        </tr>
    
            <tr>
                <td><%= diningPage.title %></td>
                <td><%= diningPage.description %></td>
                <td><%= diningPage._id %></td>
            </tr>
    
    </table>
    <form method="post" action="/comment">
        <textarea name="comment"></textarea>
        <input type="hidden" name="pageid" value="<%= diningPage._id %>">
        <input type="submit">
    </form>
</div>


