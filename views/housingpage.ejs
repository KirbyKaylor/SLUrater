<% include chunks/head %>
<% include chunks/nav %>
<div class="page">

    <h1><%= housingpage.title %></h1>
    <p><%= housingpage.description %></p>

    <% if (username) { %>
    <input height='30px' width='30px' src="http://upload.wikimedia.org/wikipedia/commons/8/87/Symbol_thumbs_up.svg"
           type="image" value="Like Page" onClick="window.location='/rate/11<%=housingpage._id%>'">
    <input height='30px' width='30px' src="http://upload.wikimedia.org/wikipedia/en/2/2f/Thumbs-down-icon.png"
           type="image" value="Dislike Page" onClick="window.location='/rate/12<%=housingpage._id%>'">
    <% }; %>
    
    <% include chunks/ratings %>
    
    <% include chunks/comment %>
    
    <% if (username) { %>
    
        <form method="post" action="/comment">
            <textarea name="comment" placeholder="Comment here..."></textarea>
            <input type="hidden" name="pageid" value="<%= housingpage._id %>">
            <input type="hidden" name="username" value="<%= username %>">
            <input type="hidden" name="category" value="<%= 1 %>">
            <input type="submit">
        </form>
    <% }; %>
</div>



<% include chunks/foot %>

